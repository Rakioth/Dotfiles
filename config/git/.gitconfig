[user]
	name = Rakioth
	email = rakioths@gmail.com
	signingkey = 3EA6F9AE925ACF98

[fetch]
	prune = true

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = true

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[core]
	editor = nvim
	autocrlf = false
	trustctime = false
	precomposeunicode = false
	ignorecase = false

[help]
	autocorrect = 1

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[apply]
	whitespace = fix

[commit]
	gpgsign = true

[tag]
	gpgsign = true

[gpg]
	program = C:\\Program Files (x86)\\GnuPG\\bin\\gpg.exe

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main
